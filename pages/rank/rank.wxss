/* pages/rank/rank.wxss */
.rank-wrapper {
  /* height: 100%; */
  padding: 20rpx;
  box-sizing: border-box;
  background: #1d1e32;
}

.search {
  margin-bottom: 15rpx;
}

.search .picker {
  float: left;
  color: #ffba5b;
  border: 1rpx solid #ffba5b;
  padding: 10rpx;
  margin: 10rpx 20rpx 10rpx 0rpx;
}

.rank-wrapper .list .item {
  width: 100%;
  display: flex;
  justify-content: center;
}

.rank-wrapper .list .item text{
  width: 120rpx;
  font-size: 24rpx;
  padding: 10rpx 0rpx;
  color: #fff;
  border: 1rpx solid #fff;
  text-align: center;
  margin-left: -1rpx;
  margin-top: -1rpx;
}
.rank-wrapper .list .item text:first-child{
  width: 80rpx;
}
.rank-wrapper .list .item text:nth-of-type(2){
  width: 180rpx;
}
.rank-wrapper .list .item text:nth-of-type(3){
  width: 180rpx;
}
.rank-wrapper .list .item text:nth-of-type(4){
  width: 80rpx;
}
.rank-wrapper .list .item text:nth-of-type(5){
  width: 80rpx;
}
.rank-wrapper .list .item text:last-child{
  width: 220rpx;
}


.more {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-top: 25rpx;
  color:#fff;
}

.more .disabled {
  color:#999;
}

.prompt {
  font-size: 20rpx;
  color: #ccc;
  text-align: center;
  margin-top: 10rpx;
  margin-bottom: -10rpx;
}